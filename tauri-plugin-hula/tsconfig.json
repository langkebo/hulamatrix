{
  // ========================================
  // Tauri Plugin TypeScript 配置
  // ========================================
  // 此配置专门用于 Tauri 插件开发
  // 继承项目根配置的风格，但针对插件环境进行优化

  "compilerOptions": {
    // ========================================
    // 目标和模块配置
    // ========================================

    // 目标环境：ES2021（兼容性考虑）
    "target": "ES2021",

    // 模块系统
    "module": "ESNext",

    // 模块解析策略
    "moduleResolution": "bundler",

    // 启用复合模式，支持增量构建
    "composite": true,

    // ========================================
    // 严格类型检查
    // ========================================

    // 启用所有严格类型检查
    "strict": true,

    // 禁止隐式的 any 类型
    "noImplicitAny": true,

    // 检查未使用的局部变量
    "noUnusedLocals": true,

    // ========================================
    // 其他配置
    // ========================================

    // 跳过库检查，提高编译速度
    "skipLibCheck": true,

    // 不生成输出文件（由主构建流程处理）
    "noEmit": true,

    // 允许导入 JavaScript 文件
    "allowSyntheticDefaultImports": true
  },

  // ========================================
  // 包含的文件
  // ========================================
  "include": [
    // 插件源代码
    "guest-js/*.ts"
  ],

  // ========================================
  // 排除的文件
  // ========================================
  "exclude": [
    // 构建输出
    "dist-js",
    "dist-js/**/*",

    // 依赖
    "node_modules",
    "node_modules/**/*"
  ]
}